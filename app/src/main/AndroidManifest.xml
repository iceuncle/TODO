<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.todo">

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.base.BaseActivity" />
        <activity android:name=".ui.datepicker.DatePickerActivity" />
        <activity android:name=".ui.add.AddActivity" />
        <activity android:name=".ui.alarm.RemindActivity"/>

        <receiver
            android:name=".ui.Receiver.OneShotAlarm"
            android:process=":remote" />
        <!--<receiver
            android:name=".RepeatingAlarm"
            android:process=":remote" />-->
    </application>

</manifest>